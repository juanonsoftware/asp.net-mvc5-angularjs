<div ng-controller="CategoryController">
    <h4 ng-hide="categories.length > 0">There is no category.....</h4>

    <div ng-hide="categories.length <= 0">
        <input type="text" ng-model="query">
        <input type="button" value="Search" ng-click="search()" />
    </div>

    <div ng-repeat="category in categories" class="row">
        <h3>{{category.Name}}</h3>
        <p>{{category.Description}}</p>
        <button ng-show="{{category.HasRecords}}">Details</button>
        <button ng-click="delete($index)">Delete</button>
    </div>

    <h2>Add a new category</h2>
    <form name="newCategoryForm" role="form"
        ng-submit="newCategoryForm.$valid && addCategory()" novalidate>
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control"
                ng-model="category.Name" required />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control"
                ng-model="category.Description" required></textarea>
        </div>

        <input type="submit" value="Submit" class="btn btn-default" />
    </form>
</div>
